<div class="container">
  <div class="login-card">
    <h2 class="page-title">Login</h2>
    <form class="form login-form" id="login-form" method="POST">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" name="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" name="password-login" />
      </div>
      <div class="form-group">
        <button class="btn purple darken-1" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="login-card">
    <h2 class="page-title">Signup</h2>
    <form class="form signup-form" id="signup-form" method="POST">
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input class="form-input" type="text" id="username-signup" name="username-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" name="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" name="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn purple darken-1" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script src="./js/login.js"></script>
